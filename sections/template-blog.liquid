{% paginate blog.articles by 3 %}
  {% for product in blog.articles %}
    <div>
    {% if article.image %}
        <img src="{{ article.image | image_url: 'medium'}}" alt=' {{ article.image.alt }}' width="{{ article.image.width }}" height="{{ article.image.height }}" loading="lazy">
        {% else %}
        {{ 'image' | placeholder_svg_tag: 'w-20' }}
    {%  endif %}
    <h1>{{ article.title }}</h1>

    {% if article.excerpt.size > 0 %}
        {% else %}
        <p>{{ article.content | strip_html | truncatewords: 15 }}</p>
    {% endif %}
</div>
  {% endfor %}
{% endpaginate %}
